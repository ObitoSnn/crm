<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.obitosnn.crm.workbench.dao.ActivityRemarkDao">

    <select id="selectByIds" resultType="int">

        select
        count(*)
        from tbl_activity_remark
        where `activityId` in
        <foreach collection="array" item="aId" open="(" close=")" separator=",">
            #{aId}
        </foreach>

    </select>

    <delete id="deleteByIds">

        delete from tbl_activity_remark
        where `activityId` in
        <foreach collection="array" item="aId" open="(" close=")" separator=",">
            #{aId}
        </foreach>

    </delete>

    <select id="getActivityRemarkListByActivityId" resultType="ActivityRemark">
        select
        `id`,
        `noteContent`,
        `createTime`,
        `createBy`,
        `editTime`,
        `editBy`,
        `editFlag`,
        `activityId`
        from tbl_activity_remark where `activityId` = #{id}
    </select>

</mapper>