<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.obitosnn.crm.workbench.dao.TranDao">

    <select id="selectTranTotalForPageVo" resultType="long">

        select count(*) from(

        select
        t.`id`
        from tbl_tran t
        inner join tbl_customer cust
        on t.`customerId`=cust.`id`
        inner join tbl_user u
        on u.`id`=t.`owner`
        inner join tbl_contacts con
        on con.`id`=t.`contactsId`
        <where>

            <if test="owner != null and owner != ''">
                u.`name` like '%' #{owner} '%'
            </if>
            <if test="name != null and name != ''">
                and t.`name` like  '%' #{name} '%'
            </if>
            <if test="customerName != null and customerName != ''">
                and cust.`name` like '%' #{customerName} '%'
            </if>
            <if test="stage != null and stage != ''">
                and t.`stage` like '%' #{stage} '%'
            </if>
            <if test="transactionType != null and transactionType != ''">
                and t.`type` like '%' #{transactionType} '%'
            </if>
            <if test="source != null and source != ''">
                and t.`source` like '%' #{source} '%'
            </if>
            <if test="contactsFullName != null and contactsFullName != ''">
                and con.`fullname` like '%' #{contactsFullName} '%'
            </if>

        </where>

        ) tbl_temp

    </select>

    <select id="selectTranListForPageVo" resultType="Tran">

        select
        t.`id`,
        u.`name` as `owner`,
        t.`name`,
        cust.`name` as `customerId`,
        t.`stage`,
        t.`type`,
        t.`source`,
        con.`fullname` as `contactsId`
        from tbl_tran t
        inner join tbl_customer cust
        on t.`customerId`=cust.`id`
        inner join tbl_user u
        on u.`id`=t.`owner`
        inner join tbl_contacts con
        on con.`id`=t.`contactsId`
        <where>

            <if test="owner != null and owner != ''">
                u.`name` like '%' #{owner} '%'
            </if>
            <if test="name != null and name != ''">
                and t.`name` like '%' #{name} '%'
            </if>
            <if test="customerName != null and customerName != ''">
                and cust.`name` like '%' #{customerName} '%'
            </if>
            <if test="stage != null and stage != ''">
                and t.`stage` like '%' #{stage} '%'
            </if>
            <if test="transactionType != null and transactionType != ''">
                and t.`type` like '%' #{transactionType} '%'
            </if>
            <if test="source != null and source != ''">
                and t.`source` like '%' #{source} '%'
            </if>
            <if test="contactsFullName != null and contactsFullName != ''">
                and con.`fullname` like '%' #{contactsFullName} '%'
            </if>

        </where> order by t.`createTime` desc

    </select>

    <insert id="insert">

        insert into tbl_tran(
            `id`,
            `owner`,
            `money`,
            `name`,
            `expectedDate`,
            `customerId`,
            `stage`,
            `source`,
            `activityId`,
            `contactsId`,
            `createBy`,
            `createTime`,
            `description`,
            `contactSummary`,
            `nextContactTime`
        )
        values(
            #{id},
            #{owner},
            #{money},
            #{name},
            #{expectedDate},
            #{customerId},
            #{stage},
            #{source},
            #{activityId},
            #{contactsId},
            #{createBy},
            #{createTime},
            #{description},
            #{contactSummary},
            #{nextContactTime}
        )

    </insert>
  	
</mapper>

































