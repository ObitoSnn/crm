<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.obitosnn.crm.workbench.dao.ContactsDao">

    <delete id="deleteContactsByIds">

        delete from `tbl_contacts` where `id` in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>

    </delete>

    <select id="selectContactsList" resultType="Contacts">

        select
        `id`,
        `fullname`,
        `email`,
        `mphone`
        from `tbl_contacts` order by `createTime` desc

    </select>

    <select id="selectContactByName" resultType="Contacts">

        select
        `id`,
        `fullname`,
        `email`,
        `mphone`
        from tbl_contacts where `fullname` like '%' #{contactName} '%'

    </select>

    <insert id="insert">

        insert into tbl_contacts(
            `id`,
            `owner`,
            `source`,
            `customerId`,
            `fullname`,
            `appellation`,
            `email`,
            `mphone`,
            `job`,
            `birth`,
            `createBy`,
            `createTime`,
            `description`,
            `contactSummary`,
            `nextContactTime`,
            `address`
        )
        values(
            #{id},
            #{owner},
            #{source},
            #{customerId},
            #{fullname},
            #{appellation},
            #{email},
            #{mphone},
            #{job},
            #{birth},
            #{createBy},
            #{createTime},
            #{description},
            #{contactSummary},
            #{nextContactTime},
            #{address}
        )

    </insert>

</mapper>

































