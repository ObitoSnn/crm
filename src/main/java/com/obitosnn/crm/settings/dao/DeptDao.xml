<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.obitosnn.crm.settings.dao.DeptDao">

    <update id="updateDept">

        update `tbl_dept` set
        `deptno`=#{deptno},
        `name`=#{name},
        `userId`=#{userId},
        `phone`=#{phone},
        `description`=#{description},
        `editBy`=#{editBy},
        `editTime`=#{editTime}
        where id=#{id}

    </update>

    <select id="selectDeptById" resultType="Dept">

        select
        d.`deptno`,
        d.`name`,
        d.`userId`,
        d.`phone`,
        d.`description`
        from `tbl_dept` d
        left outer join `tbl_user` u
        on d.`userId`=u.`id`
        where d.`id`=#{id}

    </select>

    <select id="selectDeptnoList" resultType="string">

        select
        `deptno`
        from `tbl_dept`

    </select>

    <insert id="insertDept">

        insert into `tbl_dept`
        (
        `id`,
        `deptno`,
        `name`,
        `userId`,
        `phone`,
        `description`,
        `createBy`,
        `createTime`
        )
        values
        (
        #{id},
        #{deptno},
        #{name},
        #{userId},
        #{phone},
        #{description},
        #{createBy},
        #{createTime}
        )

    </insert>

    <select id="selectDeptListForPageVo" resultType="Dept">

        select
        d.`id`,
        d.`deptno`,
        d.`name`,
        u.`name` as `userId`,
        d.`phone`,
        d.`description`
        from `tbl_dept` d
        left outer join `tbl_user` u
        on d.`userId`=u.`id`
        order by d.`createTime` asc

    </select>

    <select id="selectDeptTotalForPageVo" resultType="long">

        select count(*) from
        (
        select
        d.`id`
        from `tbl_dept` d
        left outer join `tbl_user` u
        on d.`userId`=u.`id`
        order by d.`createTime` asc
        ) tbl_tmp

    </select>

</mapper>